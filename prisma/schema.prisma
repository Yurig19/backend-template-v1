generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Audit {
  uuid String @id @unique @default(uuid())

  entity String? @db.Text()
  method String? @db.Text()

  userUuid String?
  user     User?   @relation(fields: [userUuid], references: [uuid])

  oldData Json? @db.Json()
  newData Json? @db.Json()

  url String? @db.Text()

  ip        String? @db.Text()
  userAgent String? @db.Text()

  createdAt DateTime @default(now())

  @@index([entity])
  @@index([userUuid])
  @@map("audits")
}

model EmailTemplate {
  id String @id @default(uuid())

  name        String   @unique @db.VarChar(100)
  subject     String   @db.VarChar(200)
  bodyHtml    String   @db.Text
  bodyText    String?  @db.Text
  variables   String[]
  category    String?  @db.VarChar(100)
  description String?  @db.VarChar(255)

  isActive Boolean @default(true)
  version  Int     @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("emailTemplates")
}

model User {
  uuid String @id @unique @default(uuid())

  name     String? @db.Text()
  password String? @db.Text()
  email    String? @unique @db.Text()

  roleUuid String?
  roles    Role?   @relation(fields: [roleUuid], references: [uuid])

  code          String?   @db.VarChar(10)
  codeExpiresAt DateTime?

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  audits Audit[]
  files  File[]

  @@map("users")
}

model Role {
  uuid String @id @unique @default(uuid())

  name String? @db.Text()
  type String? @unique() @db.VarChar(100)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  //
  userData        User[]
  rolePermissions RolePermission[]

  @@map("roles")
}

model ErrorLog {
  uuid String @id @unique @default(uuid())

  error      String? @db.Text()
  statusCode Int?    @db.Integer()
  statusText String? @db.Text()

  method String? @db.Text()
  path   String? @db.Text()

  ip        String? @db.Text()
  userAgent String? @db.Text()

  createdAt DateTime @default(now())

  @@map("errorLogs")
}

model File {
  uuid     String  @id @default(uuid())
  filename String? @db.Text()
  mimetype String? @db.Text()
  key      String? @db.VarChar(255)
  path     String? @db.Text()
  size     Int?    @db.Integer()

  isPrivate Boolean @default(false)
  storage   String? @db.VarChar(50)

  userUuid String?
  user     User?   @relation(fields: [userUuid], references: [uuid])

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  deletedAt DateTime?

  @@map("files")
}

model Permission {
  uuid        String  @id @default(uuid())
  name        String  @unique @db.VarChar(150)
  description String? @db.Text()

  action String @db.VarChar(150)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  roles RolePermission[]

  @@map("permissions")
}

model RolePermission {
  uuid String @id @default(uuid())

  roleUuid String
  role     Role   @relation(fields: [roleUuid], references: [uuid])

  permissionUuid String
  permission     Permission @relation(fields: [permissionUuid], references: [uuid])

  assignedAt DateTime @default(now())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("rolePermissions")
}
